{
    "env": {
        "browser": true,
		"node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-var": [
			"error"
		],
		"no-array-constructor": [
			"error"
		],
		"no-fallthrough": [
			"off"
		],
		"no-console": [
			"error", { "allow": ["log"] }
		]
    },
	"parserOptions": {
        "sourceType": "module"
    }
}
